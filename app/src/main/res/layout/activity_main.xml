<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/bg_dark"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Title -->
    <TextView
        android:text="Shorts Generator"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="@color/text_primary"
        android:layout_marginBottom="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:text="Subtitles for Shorts · Reels · TikTok"
        android:textColor="@color/text_secondary"
        android:textSize="14sp"
        android:layout_marginBottom="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <!-- Input Card -->
    <EditText
        android:id="@+id/inputText"
        android:hint="Вставь текст..."
        android:hintTextColor="@color/text_secondary"
        android:textColor="@color/text_primary"
        android:background="@android:color/transparent"
        android:padding="12dp"
        android:minLines="5"
        android:gravity="top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <!-- Speed -->
    <Spinner
        android:id="@+id/speedSpinner"
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <!-- Style -->
    <Spinner
        android:id="@+id/styleSpinner"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <!-- Buttons -->
    <Button
        android:id="@+id/btnGenerate"
        android:text="ПРЕДПРОСМОТР"
        android:textColor="@color/text_primary"
        android:backgroundTint="@color/button_secondary"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="48dp"/>

    <Button
        android:id="@+id/btnSrt"
        android:text="СОЗДАТЬ SRT"
        android:textColor="@color/text_primary"
        android:backgroundTint="@color/purple"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="48dp"/>

    <Button
        android:id="@+id/btnShare"
        android:text="ПОДЕЛИТЬСЯ"
        android:textColor="@color/text_primary"
        android:backgroundTint="@color/button_secondary"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="48dp"/>

    <!-- Result -->
    <ScrollView
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/resultText"
            android:textColor="@color/text_primary"
            android:textSize="14sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </ScrollView>

</LinearLayout>
