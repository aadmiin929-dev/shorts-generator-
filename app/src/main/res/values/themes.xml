<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Основная тема приложения -->
    <style name="Theme.ShortsGenerator" parent="Theme.Material3.Dark.NoActionBar">
        <item name="colorPrimary">@color/purple</item>
        <item name="colorSecondary">@color/purple_dark</item>
        <item name="android:windowBackground">@color/bg_dark</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
    </style>

    <!-- Splash Screen (Android 12+) -->
    <style name="Theme.ShortsGenerator.Splash" parent="Theme.SplashScreen">
        <!-- Фон сплэша -->
        <item name="windowSplashScreenBackground">@color/purple</item>

        <!-- Иконка -->
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>

        <!-- После сплэша -->
        <item name="postSplashScreenTheme">@style/Theme.ShortsGenerator</item>
    </style>

</resources>
