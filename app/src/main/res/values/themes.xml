<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Основная тема -->
    <style name="Theme.ShortsGenerator" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/bg_dark</item>
    </style>

    <!-- Splash Screen -->
    <style name="Theme.ShortsGenerator.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/bg_dark</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
        <item name="windowSplashScreenIconBackgroundColor">@color/primary</item>
        <item name="postSplashScreenTheme">@style/Theme.ShortsGenerator</item>
    </style>

</resources>
