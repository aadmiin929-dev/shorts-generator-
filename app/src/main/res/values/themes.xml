<resources>

    <!-- Основная тема -->
    <style name="Theme.ShortsGenerator" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorSecondary">@color/primary</item>
        <item name="android:statusBarColor">@color/primary</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <!-- Splash тема -->
    <style name="Theme.ShortsGenerator.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/primary</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
        <item name="postSplashScreenTheme">@style/Theme.ShortsGenerator</item>
    </style>

</resources>
