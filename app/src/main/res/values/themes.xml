<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Основная тема приложения -->
    <style name="Theme.ShortsGenerator" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/bg_dark</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:statusBarColor">@color/bg_dark</item>
        <item name="android:navigationBarColor">@color/bg_dark</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">true</item>
    </style>

    <!-- Splash Screen -->
    <style name="Theme.ShortsGenerator.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/purple</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
        <item name="postSplashScreenTheme">@style/Theme.ShortsGenerator</item>
    </style>

</resources>
